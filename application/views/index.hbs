<body>
    <h3>Home</h3>
    <h4>Welcome to SocialShare! A site where you can share your favorite pictures with family and friends!</h4>
    <main id="main-content">
        {{#each results}}
        <div class="cards" style ="color: white">
            <img src = "{{this.thumbnail}}" alt="">
            <p>{{this.title}}</p>
            <p>{{this.description}}</p>
            <a href = "/posts/{{this.id}}" > Details</a>
        </div>
        {{/each}}
</body>
</html>
